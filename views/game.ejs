<% include include/header.ejs %>
	<div class="container game">
	<% if (user) { %>
		<div class="status">
			<h1><%= user.map %></h1>
			<ul>
				<li>현재 위치 : <%= user.place %></li>
				<li>닉네임 : <%= user.user_nick %></li>
				<li>레벨 : <%= user.lv %></li>
				<li>생명력 : <%= user.hp %>/<%= user.max_hp %></li>
				<li>파워 : <span class="pw"><%= user.pw %></span>/<%= user.max_pw %></li>
			</ul>
			<a href="/logout" class="btn">로그아웃</a><br />
			<h2>이동하기</h2>
			<ul class="place">
				<li><a href="#n">안전지대</a></li>
				<li><a href="#n">헤이븐</a></li>
				<li><a href="#n">오금</a></li>
				<li><a href="#n">분당</a></li>
				<li><a href="#n">을지로</a></li>
			</ul>
		</div>
	<% } else { %>
		<script>location.href = "/login";</script>
	<% } %>
    </div>
    <script>
    	$(function() {
			$(".place a").click(function(e) {
				e.preventDefault();
				$.post("/game", null, function(data) {
					console.log(data.currentPw);
					$(".pw").text(data.currentPw);
				}, 'json');
			});
		});
	</script>
<% include include/footer.ejs %>