<% include include/header.ejs %>
	<div class="container adventure">
		<a href="/logout" class="btn">로그아웃</a>
		<% if (userStat.hp > 0) { %>
		<div class="status">
			<h1><%= userStat.map %></h1>
			<ul>
				<li>현재 위치 : <%= userStat.place %></li>
				<li>닉네임 : <%= userStat.user_nick %></li>
				<li>레벨 : <%= userStat.lv %></li>
				<li>생명력 : <%= userStat.hp %>/<%= userStat.max_hp %></li>
				<li>
					<form action="/itemClearForm" id="itemClear" method="post">
					공격력 : <%= userStat.attack + userStat.add_damage %>
					<% for (i = 0; i < userStat.item.length; i++) { %>
						<% if (userStat.item[i].state === "착용 중") { %>
							(+ <%=userStat.add_damage %>)
							<input type="button" value="<%= userStat.item[i].name %>" />
						<% } %>
					<% } %>
					<input type="hidden" name="itemClearValue" id="hidden" value="" />
					</form>
				</li>
				<li>파워 : <%= userStat.pw %>/<%= userStat.max_pw %></li>
				<li>경험치 : <%= userStat.exp %>/<%= userStat.max_exp %></li>
				<li>Kill : <%= userStat.kill %></li>
				<li class="item">
					아이템 : 
					<form action="/itemForm" id="item" method="post">
						<ul>
							<% for (i = 0; i < userStat.item.length; i++) { %>
							<li>
								<% if (userStat.item[i].state !== "착용 중") { %>
								<input type="button" value="<%= userStat.item[i].name %>" /><% if (userStat.item[i].effect === "생명력" || userStat.item[i].effect === "파워") { %>(<%= userStat.item[i].count %>)<% }%>
								<% } %>
								<div>
									효과 : 
									<%= userStat.item[i].effect %>
									<%= userStat.item[i].value %>
									<%
										var result; 
										if (userStat.item[i].effect === "생명력" || userStat.item[i].effect === "파워") {
											result = "회복";
										} else {
											result = "";
										}
										// else if (userStat.item[i].effect === "무기") {
										// 	result = "공격력";
										// } else if (userStat.item[i].effect === "방어구") {
										// 	result = "방어력";
										// }
									%>
									<%= result %>
								</div>
							</li>
							<% } %>
						</ul>
						<input type="hidden" name="itemValue" id="hidden" value="" />
					</form>
				</li>
			</ul>
		</div>
		<div>
			<h2>이동하기</h2>
			<form action="/moveForm" id="move" method="post">
				<ul class="action">
					<li><input type="button" value="안전 지대" /></li>
					<li><input type="button" value="헤이븐" /></li>
					<li><input type="button" value="오금" /></li>
				</ul>
				<input type="hidden" name="moveValue" id="hidden" value="" />
			</form>
			<% if (userStat.match) { %>
			<div class="meet">
				<h3><%= userStat.match %> 조우</h3>
				<p>체력 : <%= matchStat.hp %></p>
				<form action="/attackForm" id="attack" method="post">
					<ul class="action">
						<li><input type="button" value="공격" /></li>
					</ul>
				</form>
				<% if (userStat.attackAfter) { %>
				<div class="" id="after">
					<h3><%= attackAfter.user_nick %></h3>
					<p >체력 : <%= attackAfter.hp %></p>
					<% if (attackAfter.hp <= 0) { %>
					<p>사망</p>
					<script>
						$("#after").addClass("on");//동적 클래스 추가 테스트 
					</script>
					<% } %>
				</div>
				<% } %>
			</div>
			<% } %>
			<% if (userStat.log) { %>
			<div class="log">
				<h3><%= userStat.log %></h3>
			</div>
			<% } %>
		</div>
		<% } else { %>
		<div class="death">
			<h2>넌 이미 죽어있다.</h2>
			<a href="/" class="btn">메인</a>
		</div>
		<% } %>
    </div>
    <script>
    	$(function() {
			$("#move input").click(function() {
				$("#move #hidden").val($(this).context.value);
    			$("#move").submit();
			});
			$("#attack input").click(function() {
				$("#attack").submit();
			});
			$("#item input").click(function() {
				$("#item #hidden").val($(this).context.value);
				$("#item").submit();
			});
			$("#itemClear input").click(function() {
				$("#itemClear #hidden").val($(this).context.value);
				$("#itemClear").submit();
			});
			//아이템 레이어
			$("#item input").hover(function() {
				$(this).parent().addClass("on");
			}, function() {
				$(this).parent().removeClass("on");
			});
		});
	</script>
<% include include/footer.ejs %>